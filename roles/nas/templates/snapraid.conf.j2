{% set array = snapraid_arrays[0] %}
# Parity files: must not be on a data disk
parity {{ array.parity_drives | map(attribute='mount') | join(' ') }}

# Content files: at least one per parity plus one data drive
{% for p in array.parity_drives %}
    content {{ p.mount }}/snapraid.content
{% endfor %}
{% for d in array.data_drives %}
    content {{ d.mount }}/snapraid.content
{% endfor %}

# Data disks: names must be unique
{% for d in array.data_drives %}
    data {{ d.name }} {{ d.mount }}/
{% endfor %}

# Exclusions
exclude *.unrecoverable
exclude /tmp/
exclude /lost+found/
exclude /#recycle/
exclude /@eaDir/
exclude /System Volume Information/